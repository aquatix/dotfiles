#!/bin/bash
exiv2 -T ./*.{CR2,jpg}
exit

# old, slower method:
find -name '*.jpg' | while read PIC; do
DATE=$(exiftool -p '$DateTimeOriginal' $PIC | sed 's/[: ]//g')
echo "$DATE $PIC"
touch -t $(echo $DATE | sed 's/\(..$\)/\.\1/') $PIC
#mv -i $PIC $(dirname $PIC)/$DATE.jpg
done

find -name '*.CR2' | while read PIC; do
DATE=$(exiftool -p '$DateTimeOriginal' $PIC | sed 's/[: ]//g')
echo "$DATE $PIC"
touch -t $(echo $DATE | sed 's/\(..$\)/\.\1/') $PIC
#mv -i $PIC $(dirname $PIC)/$DATE.jpg
done
